{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug vermilion sats",
      "program": "${workspaceFolder}/target/debug/ord",
      "args": [
        "--config=/home/miltu/ord.yaml",
        "--index-sats",
        "vermilion",
        "--http-port=1080",
        "--api-http-port=2081",
        "--n-threads=10"
      ],
      "cwd": "${workspaceFolder}",
      "exitCommands": ["process signal SIGINT"],
      "env": {"RUST_LOG": "warn"}
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug vermilion wo sats",
      "program": "${workspaceFolder}/target/debug/ord",
      "args": [
        "--config=/home/miltu/ord.yaml",
        "--index=/home/miltu/.local/share/ord/index_vermilion_wo_sats.redb",
        "vermilion",
        "--http-port=1080",
        "--api-http-port=2081",
        "--n-threads=1"
      ],
      "cwd": "${workspaceFolder}",
      "exitCommands": ["process signal SIGINT"],
      "env": {"RUST_LOG": "info,ord::index::updater::inscription_updater=warn"}
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug indexer",
      "program": "${workspaceFolder}/target/debug/ord",
      "args": [
        "index",
        "run"
      ],
      "cwd": "${workspaceFolder}",
      "exitCommands": ["process signal SIGINT"],
      "env": {"RUST_LOG": "warn", "RUST_BACKTRACE": "1"}
    }
  ]
}