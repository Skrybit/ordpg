  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug vermilion",
      "program": "${workspaceFolder}/target/debug/ord",
      "args": [
        "vermilion",
        "--http-port=1080"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug indexer",
      "program": "${workspaceFolder}/target/debug/ord",
      "args": [
        "index",
        "run"
      ],
      "cwd": "${workspaceFolder}",
      "exitCommands": ["process signal SIGTERM"],
      "env": {"RUST_LOG": "warn", "RUST_BACKTRACE": "1"}
    }
  ]
}